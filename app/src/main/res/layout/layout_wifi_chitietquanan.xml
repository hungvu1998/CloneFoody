<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/colorAccent"
    android:padding="10dp"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <LinearLayout

        android:id="@+id/khungWifi"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
      <LinearLayout
          android:id="@+id/khungwifi2"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
          <LinearLayout
              android:layout_weight="1"

              android:layout_width="match_parent"
              android:orientation="vertical"
              android:layout_height="wrap_content">
              <TextView

                  android:text="Tên Wifi"
                  android:textStyle="bold"
                  android:textSize="20sp"
                  android:textColor="@color/colorFB"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content" />
              <TextView
                  android:textSize="15sp"
                  android:textStyle="italic"
                  android:id="@+id/txtTenWifi"

                  android:layout_width="match_parent"
                  android:layout_height="wrap_content" />
          </LinearLayout>


          <LinearLayout
              android:layout_width="match_parent"
              android:layout_weight="1"
              android:orientation="vertical"
              android:layout_height="wrap_content">
              <TextView

                  android:text="Mật khẩu"
                  android:textStyle="bold"
                  android:textSize="20sp"

                  android:textColor="@color/colorFB"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:gravity="end" />
              <TextView

                  android:textStyle="italic"
                  android:textSize="15sp"
                  android:id="@+id/txtMKWifi"
                  android:gravity="end"
                  android:textAlignment="textEnd"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content" />
              <TextView
                  android:gravity="end"
                  android:textAlignment="textEnd"
                  android:id="@+id/txtNgaydang"
                  android:textSize="10sp"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content" />
          </LinearLayout>
      </LinearLayout>

        <TextView
            android:textSize="30sp"

            android:textStyle="italic"
            android:visibility="gone"
            android:textColor="@color/colorFB"
            android:text="Chưa có WIFI"
            android:id="@+id/txtChuaco"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>