<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBackgroundTrangChu">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:id="@+id/toolbar"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimaryDark3">



        <TextView
            android:layout_gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:id="@+id/txtThanhVien"
            android:textColor="@color/colorAccent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:src="@drawable/lalatext3" />




    </android.support.v7.widget.Toolbar>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/cicleImageUser"

        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"

        android:textColor="@color/colorAccent" />
    <Button
        android:id="@+id/btnUpload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_gravity="center"
        android:textColor="@color/colorAccent"
        android:layout_marginTop="10dp"
        android:background="@color/colorPrimaryDark2"
        android:padding="5dp"
        android:textSize="11sp"
        android:textAllCaps="false"
        android:drawableTop="@drawable/ic_camera"

        android:text="@string/upload" />

    <TextView
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:text="Thay đổi thông tin tài khoản"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



        <EditText
            android:id="@+id/edTenDangKy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/colorAccent"
            android:drawableLeft="@drawable/ic_perm_identity_white_24dp"
            android:drawablePadding="10dp"
            android:ems="10"
            android:hint="Tên "
            android:inputType="textPersonName"
            android:textColor="@color/colorBlack"
            android:textColorHint="@color/colorBlack" />

    <Button

        android:id="@+id/btnDangKy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@color/colorPrimaryDark2"
        android:paddingLeft="60dp"
        android:paddingRight="60dp"
        android:text="Oke"
        android:textColor="@color/colorBlack" />

</LinearLayout>