<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBackgroundTrangChu">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimaryDark3">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/lalatext3" />

        <RadioGroup
            android:id="@+id/radioGroupPAF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/custom_butongroup_trangchu"

            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/RBPlace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_radio_place"
                android:button="@android:color/transparent"
                android:checked="true"
                android:padding="10dp"
                android:textColor="@drawable/changetext_radio_trangchu"
                android:text="@string/Place" />

            <RadioButton
                android:id="@+id/RBPFood"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/custom_radio_food"
                android:button="@android:color/transparent"
                android:padding="10dp"
                android:text="@string/Food"
                android:textColor="@drawable/changetext_radio_trangchu" />

        </RadioGroup>
    <FrameLayout
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="10dp"
        android:layout_gravity="right">
        <Spinner
            android:id="@+id/spinnerUser"
            android:layout_gravity="right"
            android:layout_width="40dp"
            android:layout_height="40dp">

        </Spinner>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/buttonUser"
            android:layout_width="40dp"
            android:layout_height="40dp"

            android:textColor="@color/colorAccent" />

    </FrameLayout>



    </android.support.v7.widget.Toolbar>


   <android.support.v4.view.ViewPager
       android:id="@+id/viewpagetrangchu"
       android:layout_width="wrap_content"
       android:layout_height="match_parent">

   </android.support.v4.view.ViewPager>

    
</LinearLayout>